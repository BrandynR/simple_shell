#include "shell.h"
void buffers(char *line, char **command, char **dir, char *combine, char **tokens, char *buf, char **tok)
{
	static char *l;
	static char **cmd;
	static char **di;
	static char *co;
	static char **tokn;
	static char *bu;
	static char **to;

	if (!line && !combine && !dir && !command)
	{
		if (l)
			free(l);
		if (cmd)
			free(cmd);
		if (di)
			free(di);
		if (co)
			free(co);
		if (tokn)
			free(tokn);
		if (bu)
			free(bu);
		if (to)
			free(to);
	}
	if (line)
	{
		if (l)
			free(l);
		l = line;
	}
	if (command)
	{
		if (cmd)
			free(cmd);
		cmd = command;
	}
	if (dir)
	{
		if (di)
			free(di);
		di = dir;
	}
	if (combine)
	{
		if (co)
			free(co);
		co = combine;
	}
	if (tokens)
	{
		if (tokn)
			free(tokn);
		tokn = tokens;
	}
	if (buf)
	{
		if (bu)
			free(bu);
		bu = buf;
	}
	if (tok)
	{
		if (to)
			free(to);
		to = tok;
	}
}
